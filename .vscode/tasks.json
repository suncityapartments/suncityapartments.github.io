{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Serve App",
      "type": "npm",
      "group": {
        "isDefault": true,
        "kind": "build"
      },
      "script": "start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    }
  ]
}
